    <body>

        <!-- Preloader start -->
        <%- include('../layouts/preloader') -%>


            <!-- Main wrapper start -->
            <div id="main-wrapper">

                <!-- Nav header start -->
                <%- include('../layouts/nav-header') -%>

                    <!-- Sidebar start -->
                    <%- include('../layouts/sidebar') -%>

                        <!-- Content body start -->
                        <div class="content-body">
                            <div class="container-fluid">
                                <!-- Page content starts -->
                                <h3>Edit Teacher</h3>

                                <div class="card">
                                    <div class="card-header"></div>
                                    <div class="card-body">
                                        <div class="basic-form">
                                            <form>

                                                <div class="form-row">
                                                    <div class="form-group col-md-4">
                                                        <label>First Name</label>
                                                        <input type="text" class="form-control" placeholder="First Name">
                                                    </div>
                                                    <div class="form-group col-md-4">
                                                        <label>Middle Name</label>
                                                        <input type="text" class="form-control" placeholder="Middle Name">
                                                    </div>
                                                    <div class="form-group col-md-4">
                                                        <label>Last Name</label>
                                                        <input type="text" class="form-control" placeholder="Last Name">
                                                    </div>
                                                </div>

                                                <div class="form-row">
                                                    <div class="form-group col-md-4">
                                                        <label>Contact</label>
                                                        <input type="text" class="form-control" placeholder="Contact Number">
                                                    </div>
                                                    <div class="form-group col-md-4">
                                                        <label>Gender</label>
                                                        <div class="form-group">
                                                            <select class="form-control">
                                                                <option value="">Male</option>
                                                                <option value="">Female</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="form-group col-md-4">
                                                        <label>Subject</label>
                                                        <select class="form-control">
                                                            <option>Select A Subject</option>
                                                            <option>Mathematics</option>
                                                            <option>English</option>
                                                            <option value="">History</option>
                                                            <option value="">Chemistry</option>
                                                            <option value="">Economics</option>
                                                        </select>
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <label>Select Class</label><br>
                                                    <div class="form-check form-check-inline">
                                                        <input type="checkbox" class="form-check-input" id="check1" value="">
                                                        <label class="form-check-label" for="check1">12th Grade</label>
                                                    </div>
                                                    <div class="form-check form-check-inline">
                                                        <input type="checkbox" class="form-check-input" id="check2" value="">
                                                        <label class="form-check-label" for="check2">11th Grade</label>
                                                    </div>
                                                    <div class="form-check form-check-inline">
                                                        <input type="checkbox" class="form-check-input" id="check3" value="">
                                                        <label class="form-check-label" for="check3">10th Grade</label>
                                                    </div>
                                                    <div class="form-check form-check-inline">
                                                        <input type="checkbox" class="form-check-input" id="check4" value="">
                                                        <label class="form-check-label" for="check4">9th Grade</label>
                                                    </div>
                                                </div>

                                                <button type="submit" class="btn btn-primary">Save</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <!-- Page content ends -->
                            </div>
                        </div>
                        <!-- Content body end -->


                        <!-- Footer start -->
                        <%- include('../layouts/footer') -%>
            </div>
